<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="363.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.animal.lifesimulation.StartController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <HBox prefHeight="28.0" prefWidth="460.0">
      <children>
         <HBox prefHeight="77.0" prefWidth="220.0">
            <children>
               <Spinner fx:id="spinnerRows" prefHeight="25.0" prefWidth="100.0" />
               <Label alignment="CENTER" prefHeight="28.0" prefWidth="80.0" text="Rows map" />
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="220.0">
            <children>
               <Spinner fx:id="spinnerCols" prefHeight="25.0" prefWidth="100.0" />
               <Label alignment="CENTER" prefHeight="28.0" prefWidth="80.0" text="Cols map" />
            </children>
         </HBox>
      </children>
   </HBox>
   <HBox prefHeight="28.0" prefWidth="460.0">
      <children>
         <VBox prefHeight="25.0" prefWidth="124.0">
            <children>
               <Spinner fx:id="spinnerNumForStop" prefHeight="25.0" prefWidth="100.0" />
            </children>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="360.0">
            <children>
               <Label prefHeight="17.0" prefWidth="360.0" text="Number died classes of animal for stopped" />
            </children>
         </VBox>
      </children>
   </HBox>
   <HBox prefHeight="34.0" prefWidth="460.0">
      <children>
         <VBox alignment="CENTER" prefHeight="60.0" prefWidth="230.0">
            <children>
              <Button fx:id="startButton" onAction="#onStartButton" prefHeight="25.0" prefWidth="80.0" text="Start" textAlignment="CENTER" />
            </children>
         </VBox>
         <VBox alignment="CENTER" prefHeight="60.0" prefWidth="230.0">
            <children>
               <Button fx:id="stopButton" onAction="#onStopButton" prefHeight="25.0" prefWidth="80.0" text="Stop" textAlignment="CENTER" />
            </children>
         </VBox>
      </children>
   </HBox>
   <HBox prefHeight="500.0" prefWidth="470.0">
      <children>
         <TextArea fx:id="textOutArea" cacheShape="false" editable="false" prefHeight="500.0" prefWidth="470.0" />
      </children>
   </HBox>
</VBox>
